log_level = "{{ nomad.log_level }}"
datacenter = "{{ nomad_datacenter }}"
data_dir = "{{ nomad.data_dir }}"
bind_addr = "{{ inventory_hostname }}"
name = "{{ inventory_hostname}}"
# Enable the server
server {
    network_interface = "{{ nomad.iface }}"
{% if consul.encrypt_key != 'none' %}
    consul {
        token = "{{ consul.encrypt_key }}"
    }
{% endif %}
    enabled = true
    start_join = [{% for host in groups['nomad-bootstrap'] %}"{{ hostvars[host]['inventory_hostname']}}:{{ nomad.bootstrap_join_port }}"{% if not loop.last %},{% endif %}{% endfor %}]
}
